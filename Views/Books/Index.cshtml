@model List<BookSwap.Models.Book>

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Available Books</h1>
        <p class="lead text-muted">Find your next favorite read.</p>
    </div>

    <div class="row g-4">

        @if (Model == null || !Model.Any())
        {
            <div class="text-center">
                <h4 class="text-muted">No books available right now.</h4>
            </div>
        }
        else
        {
            foreach (var book in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">

                     <img src="@(string.IsNullOrEmpty(book.ImagePath) ? "/images/default-book.svg" : Url.Content(book.ImagePath))"
                            class="card-img-top"
                            alt="@book.Title"
                            onerror="this.src='/images/default-book.svg'" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@book.Title</h5>
                            <p class="text-muted mb-2">@book.Author</p>
                            <p class="fw-bold mb-3">PKR @book.Price</p>

                            <form asp-action="PlaceOrder" method="post" class="mt-auto">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <input type="number" name="quantity" value="1" min="1"
                                       class="form-control mb-2" required />
                                <button class="btn btn-primary w-100 rounded-pill fw-bold">Order</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
