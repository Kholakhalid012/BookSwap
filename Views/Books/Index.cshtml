@{
    ViewData["Title"] = "Browse Books";
}

<section class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Browse Books</h1>
        <p class="lead text-muted">Find your next favorite read among thousands of books.</p>
    </div>

    <!-- Search Bar -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form class="d-flex">
                <input type="text" class="form-control rounded-pill me-2 py-3" placeholder="Search by title or author" style="font-size: 1.2rem;">
                <select class="form-select rounded-pill me-2 py-3" style="font-size: 1.2rem; width: 180px;">
                    <option value="">All Categories</option>
                    <option>Computer Science</option>
                    <option>Fiction</option>
                    <option>Business</option>
                </select>
                <button class="btn btn-primary rounded-pill px-4 fw-bold">Search</button>
            </form>
        </div>
    </div>

    <!-- Book Cards -->
    <div class="row g-4">
        <!-- Example Card -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
                <img src="https://via.placeholder.com/300x200?text=Book+Cover" class="card-img-top" alt="Book Cover">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">Clean Code</h5>
                    <p class="card-text text-muted mb-2">Robert C. Martin</p>
                    <p class="fw-bold mb-3">PKR 850</p>
                    <a href="#" class="btn btn-outline-primary mt-auto rounded-pill fw-bold">Contact Seller</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
                <img src="https://via.placeholder.com/300x200?text=Book+Cover" class="card-img-top" alt="Book Cover">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">The Pragmatic Programmer</h5>
                    <p class="card-text text-muted mb-2">Andy Hunt</p>
                    <p class="fw-bold mb-3">PKR 950</p>
                    <a href="#" class="btn btn-outline-primary mt-auto rounded-pill fw-bold">Contact Seller</a>
                </div>
            </div>
        </div>

        <!-- Add more cards as needed -->
    </div>

    <!-- Optional Pagination -->
    <div class="d-flex justify-content-center mt-5">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</section>
