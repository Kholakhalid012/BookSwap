@{
    ViewData["Title"] = "Add Book - BookSwap";
}

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Add a New Book</h1>
        <p class="lead text-muted">List your book for buyers to discover easily.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm p-4">
                <form asp-action="AddBook" enctype="multipart/form-data">
                    <!-- Book Title -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Book Title</label>
                        <input type="text" class="form-control rounded-pill py-3" placeholder="Enter book title" style="font-size: 1.2rem;">
                    </div>

                    <!-- Author -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Author</label>
                        <input type="text" class="form-control rounded-pill py-3" placeholder="Enter author name" style="font-size: 1.2rem;">
                    </div>

                    <!-- Category -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Category</label>
                        <select class="form-select rounded-pill py-3" style="font-size: 1.2rem;">
                            <option value="">Select Category</option>
                            <option>Computer Science</option>
                            <option>Fiction</option>
                            <option>Business</option>
                            <option>Education</option>
                        </select>
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Price (PKR)</label>
                        <input type="number" class="form-control rounded-pill py-3" placeholder="Enter price" style="font-size: 1.2rem;">
                    </div>

                    <!-- Book Cover Image -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Book Cover Image</label>
                        <input type="file" class="form-control rounded-pill py-2">
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success w-100 rounded-pill py-3 fw-bold">Add Book</button>
                </form>
            </div>
        </div>
    </div>
</section>
