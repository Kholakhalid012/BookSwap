@{
    ViewBag.Title = "Register - BookSwap";
}

<style>
    body {
        background-image: url('/images/BackGroungimg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #c1ae98;
        height: 100vh;
    }
</style>
<section class="vh-100 d-flex align-items-center justify-content-center" style="">
    <div class="card shadow-lg squared-5 p-5 text-center" style="width: 100%; max-width: 500px; background-color: rgb(255, 254, 254);">
        <div class="mb-4">
            <i class="bi bi-journal-plus display-1 text-success"></i>
            <h2 class="fw-bold mt-3">Create Account</h2>
            <p class="text-muted">Sign up to start swapping books</p>
        </div>

        <form>
            <div class="mb-4 position-relative">
                <i class="bi bi-person-fill position-absolute top-30 translate-middle-y ms-4 text-success"></i>
                <input type="text" class="form-control squared-pill ps-5 py-3" placeholder="Username" style="font-size: 1.3rem;">
            </div>
            <div class="mb-4 position-relative">
                <i class="bi bi-envelope-fill position-absolute top-30 translate-middle-y ms-4 text-success"></i>
                <input type="email" class="form-control squared-pill ps-5 py-3" placeholder="Email" style="font-size: 1.3rem;">
            </div>
            <div class="mb-4 position-relative">
                <i class="bi bi-lock-fill position-absolute top-30 translate-middle-y ms-4 text-success"></i>
                <input type="password" class="form-control squared-pill ps-5 py-3" placeholder="Password" style="font-size: 1.3rem;">
            </div>
            <div class="mb-4 position-relative">
                <i class="bi bi-lock-fill position-absolute top-30 translate-middle-y ms-4 text-success"></i>
                <input type="password" class="form-control squared-pill ps-5 py-3" placeholder="Confirm Password" style="font-size: 1.3rem;">
            </div>
            <button type="submit" class="btn btn-success w-100 squared-pill py-3 fw-bold">Sign Up</button>
        </form>

        <p class="mt-4">Already have an account? <a href="/Account/Login" class="fw-bold text-primary">Login</a></p>
    </div>
</section>
