<style>
body {
    background-image: url('/images/BackGroungimg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #c1ae98;
    height: 100vh;
}
.input-icon {
    position: absolute;
    top: 50%;
    left: 18px;
    transform: translateY(-50%);
    font-size: 1.2rem;
}
</style>

<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg p-5 text-center" style="width: 100%; max-width: 500px; background:white;">
        <div class="mb-4">
            <i class="bi bi-journal-plus display-1 text-success"></i>
            <h2 class="fw-bold mt-3">Create Account</h2>
            <p class="text-muted">Sign up to start swapping books</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="mb-4 position-relative">
                <i class="bi bi-person-fill text-success input-icon"></i>
                <input type="text" name="username" class="form-control rounded-pill ps-5 py-3" placeholder="Username" style="font-size:1.2rem;" required>
            </div>

            <div class="mb-4 position-relative">
                <i class="bi bi-lock-fill text-success input-icon"></i>
                <input type="password" name="password" class="form-control rounded-pill ps-5 py-3" placeholder="Password" style="font-size:1.2rem;" required>
            </div>

            <div class="mb-4 position-relative">
                <i class="bi bi-lock-fill text-success input-icon"></i>
                <input type="password" name="confirmPassword" class="form-control rounded-pill ps-5 py-3" placeholder="Confirm Password" style="font-size:1.2rem;" required>
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill py-3 fw-bold">Sign Up</button>
        </form>

        @if(ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        <p class="mt-4">Already have an account? 
            <a href="/Account/Login" class="fw-bold text-primary">Login</a>
        </p>
    </div>
</section>
