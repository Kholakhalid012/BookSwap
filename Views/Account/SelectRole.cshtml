@{
    ViewData["Title"] = "Select Role";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-4">Select Your Role</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="SelectRole" method="post">
                    <input type="hidden" name="username" value="@ViewBag.Username" />

                    @if (ViewBag.Roles != null)
                    {
                        foreach (var r in ViewBag.Roles as string[])
                        {
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="role" value="@r" id="@r" required />
                                <label class="form-check-label" for="@r">@r</label>
                            </div>
                        }
                    }

                    <button type="submit" class="btn btn-primary w-100">Continue</button>
                </form>
            </div>
        </div>
    </div>
</div>
