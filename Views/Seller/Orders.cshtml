@model List<BookSwap.Models.Order>

<h2 class="text-center mb-4">Orders for My Books</h2>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Book</th>
            <th>Buyer ID</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Stock Remaining</th> <!-- optional -->
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Book?.Title</td>
                <td>@order.BuyerId</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>@order.Book?.Stock</td> <!-- display remaining stock -->
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        No orders yet for your books.
    </div>
}
