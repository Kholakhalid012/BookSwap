@model List<BookSwap.Models.Book>

<div class="container mt-5">
    <h2 class="text-center mb-4">My Books</h2>

    <div class="mb-3 text-center">
        <strong>Total Books: <span id="bookCount">@Model.Count</span></strong>
    </div>

    <div class="card shadow-lg p-4">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Price (PKR)</th>
                    <th>Stock</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            <img src="@book.ImagePath" alt="Book Image" width="60" height="80" class="rounded shadow-sm" />
                        </td>

                        <td class="fw-semibold">@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Category</td>
                        <td class="fw-bold">Rs. @book.Price</td>
                         <td class="fw-bold">@book.Stock</td>

                        <td class="text-center">
                            <a href="/Seller/EditBook/@book.Id" class="btn btn-primary btn-sm me-2">
                                Edit
                            </a>

                            <form asp-action="DeleteBook" asp-controller="Seller" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@book.Id" />
                                <button type="submit" 
                                        class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this book?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mt-3">
                You have not added any books yet.
            </div>
        }
    </div>
</div>