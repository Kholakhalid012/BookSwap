@model List<BookSwap.Models.Book>
@{
    ViewData["Title"] = "Manage Books";
}

<h3>All Books</h3>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Category</td>
                <td>@b.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(b.ImagePath))
                    {
                        <img src="@b.ImagePath" width="60" height="80" class="rounded" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
