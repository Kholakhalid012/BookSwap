@model BookSwap.Models.User[]
@{
    ViewData["Title"] = "Manage Users";
}

<h3>All Users</h3>
<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.id</td>
                <td>@u.username</td>
                <td>@u.role</td>
            </tr>
        }
    </tbody>
</table>
