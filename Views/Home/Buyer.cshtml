@{
    ViewBag.Title = "Buyer - BookSwap";
}

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome, Book Buyer!</h1>
        <p class="lead">Find your next favorite read at amazing prices.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-search display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Browse Books</h5>
                <p>Search for books by title, author, or category and explore our listings.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-hand-thumbs-up display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Connect With Sellers</h5>
                <p>Contact sellers directly to ask questions or negotiate prices.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-bag-check display-4 text-warning mb-3"></i>
                <h5 class="fw-bold">Purchase Securely</h5>
                <p>Complete your order safely and enjoy your new book!</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/Books/Browse" class="btn btn-primary btn-lg">Start Browsing Books</a>
    </div>
</section>
