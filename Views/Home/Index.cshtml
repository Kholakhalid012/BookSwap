<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookSwap | Buy & Sell Used Books</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            scroll-behavior: smooth;
        }

        /* Navbar */
        .navbar {
            background: rgba(0, 0, 0, 0.7);
        }

        .navbar a {
            color: white !important;
            font-weight: 500;
        }

        /* Hero Section */
        .hero {
            background: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f') center/cover no-repeat;
            height: 100vh;
            color: white;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .hero::after {
            content: '';
            position: absolute;
            top: 0; 
            left: 0;
            width: 100%; 
            height: 100%;
            background: rgba(0, 0, 0, 0.80);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        /* Features Section */
        .roles-section {
            padding: 80px 0;
            background-color: #f9f9f9;
        }

        .role-card {
            border: none;
            border-radius: 20px;
            transition: transform 0.3s;
        }

        .role-card:hover {
            transform: scale(1.05);
        }

        /* Search Section */
        .search-section {
            background-color: #fff;
            padding: 60px 0;
        }

        /* Footer */
        .footer {
            background: #090909;
            color: white;
            padding: 30px 0;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-white" href="/">📚 BookSwap</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon text-white"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Books/Browse">Browse</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content text-center">
            <h1>Buy & Sell Used Books Easily</h1>
            <p>Your sustainable marketplace for affordable reading.</p>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="roles-section">
        <div class="container text-center">
            <h2 class="fw-bold mb-5">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm role-card p-4">
                        <i class="bi bi-book-half display-4 text-primary mb-3"></i>
                        <h4>For Buyers</h4>
                        <p>Browse thousands of used books and find great deals from trusted sellers.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm role-card p-4">
                        <i class="bi bi-journal-plus display-4 text-success mb-3"></i>
                        <h4>For Sellers</h4>
                        <p>Easily list your books and connect with buyers who love reading the literature.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* <!-- Search Section -->
    <section class="search-section text-center">
        <div class="container">
            <h2 class="fw-bold mb-4">Find Your Next Read</h2>
            <form class="d-flex justify-content-center">
                <input type="text" class="form-control w-50 me-2" placeholder="Search by title, author, or category...">
                <button class="btn btn-primary">Search</button>
            </form>
        </div>
    </section> *@

    <!-- Footer -->
    <footer class="footer text-center">
        <p>&copy; @DateTime.Now.Year BookSwap | Made with ❤️ for Readers</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
