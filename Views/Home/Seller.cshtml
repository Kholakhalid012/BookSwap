@{
    ViewBag.Title = "Seller - BookSwap";
}

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome, Book Seller!</h1>
        <p class="lead">List your used books and reach eager readers.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-journal-plus display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Add Your Books</h5>
                <p>Create listings with title, author, category, and price details.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-people display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Reach Buyers</h5>
                <p>Your listings are visible to thousands of potential buyers.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 text-center">
                <i class="bi bi-check-circle display-4 text-warning mb-3"></i>
                <h5 class="fw-bold">Manage Orders</h5>
                <p>Track orders, respond to inquiries, and keep your inventory updated.</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/Account/Login" class="btn btn-success btn-lg">Add Your First Book</a>
    </div>
</section>
