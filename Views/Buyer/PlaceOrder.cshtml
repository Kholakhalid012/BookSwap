@model BookSwap.Models.Book
@{
    ViewBag.Title = "Place Order";
}

<h2>Order: @Model.Title</h2>

<form asp-action="PlaceOrder" method="post">
    <input type="hidden" name="bookId" value="@Model.Id" />
    <label>Buyer Name:</label><br />
    <input type="text" name="buyerName" required /><br /><br />
    <label>Quantity:</label><br />
    <input type="number" name="quantity" value="1" min="1" required /><br /><br />
    <button type="submit" class="btn btn-primary">Place Order</button>
</form>

@if (TempData["Success"] != null)
{
    <p class="text-success">@TempData["Success"]</p>
}
