@model List<BookSwap.Models.Order>
@{
    ViewBag.Title = "My Orders";
}

<table class="table">
    <thead>
        <tr>
            <th>Book title</th>
            <th>Book ID</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
        </tr>
    </thead>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Book?.Title</td>
            <td>@order.BookId</td>
            <td>@order.Quantity</td>
            <td>@order.TotalPrice</td>
            <td>@order.Status</td>
        </tr>
    }
</table>
