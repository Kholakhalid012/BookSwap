@model List<BookSwap.Models.Book>

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Available Books</h1>
        <p class="lead text-muted">Find your next favorite read.</p>
    </div>

    <div class="row g-4">

        @if (Model == null || !Model.Any())
        {
            <div class="text-center">
                <h4 class="text-muted">No books available right now.</h4>
            </div>
        }
        else
        {
            foreach (var book in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">

                        <img src="@book.ImagePath"
                             class="card-img-top"
                             style="height: 240px; object-fit: contains"
                             onerror="this.src='/images/default-book.svg'" />

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title fw-bold">@book.Title</h5>

                            <p class="text-muted mb-1">@book.Author</p>

                            <p class="fw-bold mb-2">PKR @book.Price</p>
                            
                            <div class="mb-2">
                                <span id="stockCount_@book.Id">@book.Stock</span> 
                            </div>
                
                            <form asp-action="PlaceOrder" method="post" class="mt-auto">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <input type="number" name="quantity" value="1" min="1"
                                       class="form-control mb-2 quantity-input" 
                                        data-stock="@book.Stock"
                                       data-bookid="@book.Id"required />
                                <button class="btn btn-primary w-100 rounded-pill fw-bold">Order</button>
                            </form>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
    
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/stockHub")
            .build();

        connection.on("ReceiveStockUpdate", (bookId, newStock) => {
            const stockSpan = document.getElementById("stockCount_" + bookId);
            const input = document.querySelector(`.quantity-input[data-bookid='${bookId}']`);
            if (stockSpan) {
                stockSpan.textContent = newStock + " in stock";
                if (newStock <= 0) {
                    stockSpan.textContent = "Out of Stock!";
                    stockSpan.style.color = "red";
                    if(input) input.value = 0; 
                } else {
                    stockSpan.style.color = "green";
                    if(input && parseInt(input.value) > newStock) input.value = newStock;
                }
            }
        });

        connection.start();

        document.querySelectorAll('.quantity-input').forEach(input => {
            input.addEventListener('input', function () {
                const qty = parseInt(this.value) || 0;
                const stock = parseInt(this.dataset.stock);
                const stockSpan = document.getElementById("stockCount_" + this.dataset.bookid);

                if (qty > stock) {
                    stockSpan.textContent = "Out of Stock!";
                    stockSpan.style.color = "red";
                } else {
                    stockSpan.textContent = qty + " out of " + stock + " in stock";
                    stockSpan.style.color = "green";
                }
            });
        });
              
        document.querySelectorAll('.quantity-input').forEach(input => {
            input.dispatchEvent(new Event('input'));
        });

     </script>
}

